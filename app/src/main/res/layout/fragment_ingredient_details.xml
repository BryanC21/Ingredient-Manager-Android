<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ingredient_details">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ingredient_details_name"
            android:layout_width="235dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="251dp"
            android:text="Name:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_img"
            android:layout_width="235dp"
            android:layout_height="235dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="IMG LATER"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_quantity"
            android:layout_width="235dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="281dp"
            android:text="Quantity:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_unit"
            android:layout_width="235dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="311dp"
            android:text="Unit:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_location"
            android:layout_width="235dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="371dp"
            android:text="Location:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_category"
            android:layout_width="235dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="341dp"
            android:text="Category:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_notes"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="461dp"
            android:text="Notes"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_expiration"
            android:layout_width="235dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="431dp"
            android:text="Expires:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_created"
            android:layout_width="235dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="401dp"
            android:text="Created:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>