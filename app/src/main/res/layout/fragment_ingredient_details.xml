<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ingredient_details">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="492dp"
            android:text="Delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_quantity"
            android:layout_width="342dp"
            android:layout_height="27dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="48dp"
            android:text="Quantity:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_unit"
            android:layout_width="339dp"
            android:layout_height="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="80dp"
            android:text="Unit:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_location"
            android:layout_width="344dp"
            android:layout_height="31dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="144dp"
            android:text="Location:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_category"
            android:layout_width="340dp"
            android:layout_height="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="112dp"
            android:text="Category:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_notes"
            android:layout_width="354dp"
            android:layout_height="123dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="328dp"
            android:text="Notes"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_expiration"
            android:layout_width="349dp"
            android:layout_height="60dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="256dp"
            android:text="Expires:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_created"
            android:layout_width="346dp"
            android:layout_height="60dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="188dp"
            android:text="Created:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ingredient_details_name"
            android:layout_width="341dp"
            android:layout_height="29dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="Name:"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>